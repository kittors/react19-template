{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["src/utils/**", "node_modules/**", "tsconfig*.json"],
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true
      },
      "correctness": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": ["tsconfig*.json", "node_modules/**", "src/style/index.css"]
  }
}
